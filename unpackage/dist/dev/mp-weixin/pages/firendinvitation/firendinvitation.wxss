.firendinvitation {
  padding-top: calc(44px + 25px);
  box-sizing: border-box;
}
.firendinvitation .main .invitation {
  padding: 20px;
  margin: 25px 20px;
  border-radius: 10px;
  box-shadow: 0px 5px 20px 0px #e7e4e4;
}
.firendinvitation .main .invitation .top {
  display: flex;
  align-items: flex-end;
  justify-content: center;
}
.firendinvitation .main .invitation .top .reject, .firendinvitation .main .invitation .top .agree {
  flex: 3;
  display: flex;
  justify-content: center;
  padding: 5px 0px;
  border-radius: 20px;
}
.firendinvitation .main .invitation .top .reject {
  background: #ffe8e8;
  color: #ff5d5b;
}
.firendinvitation .main .invitation .top .agree {
  background-color: #ffe431;
}
.firendinvitation .main .invitation .top .avatar {
  flex: 2;
  display: flex;
  justify-content: center;
  position: relative;
  margin-top: -90px;
}
.firendinvitation .main .invitation .top .avatar image {
  width: 60px;
  height: 60px;
  border-radius: 50%;
}
.firendinvitation .main .invitation .center {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 10px 0;
}
.firendinvitation .main .invitation .center .time {
  font-size: 12px;
  color: #ccc;
}
.firendinvitation .main .invitation .floor {
  background: #edecec;
  border-radius: 10px;
  padding: 5px;
}

