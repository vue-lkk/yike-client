page {
  height: 100%;
  background: #f9f9f9;
}
.chat {
  box-sizing: border-box;
  padding-top: calc(44px + 25px);
  height: 100%;
  background: #f9f9f9;
}
.chat .top .top-bar {
  background: #f9f9f9;
}
.chat .top .top-bar .image {
  border-radius: 5px;
}
.chat .main .chat-msg {
  padding: 0 16px;
  overflow: hidden;
}
.chat .main .chat-msg .time {
  text-align: center;
  font-size: 12px;
  color: rgba(39, 40, 50, 0.3);
  padding: 10px 0;
}
.chat .main .chat-msg .chat-info {
  display: flex;
  margin: 10px 0;
}
.chat .main .chat-msg .chat-info .img image {
  width: 40px;
  height: 40px;
  border-radius: 10px;
}
.chat .main .chat-msg .chat-info .msg {
  max-width: 190px;
  border-radius: 0px 10px 10px 10px;
  padding: 5px 10px;
  margin: 0px 10px;
  line-height: 25px;
  font-size: 14px;
  color: #272832;
  display: flex;
  align-items: center;
}
.chat .main .chat-msg .chat-info .msg image {
  max-width: 160px;
  max-height: 200px;
  border-radius: 10px;
  border: 1px solid #ebeaea;
}
.chat .main .chat-msg .left .msg {
  background: #ffffff;
}
.chat .main .chat-msg .left .msg .voice {
  display: flex;
  align-items: center;
  max-width: 200px;
  min-width: 50px;
}
.chat .main .chat-msg .left .msg .voice image {
  width: 14px;
  height: 18px;
  border: none;
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
  margin-right: 10px;
}
.chat .main .chat-msg .left .isbg {
  background: transparent;
}
.chat .main .chat-msg .right {
  flex-direction: row-reverse;
}
.chat .main .chat-msg .right .msg {
  border-radius: 10px 0px 10px 10px;
  background: #ffe431;
}
.chat .main .chat-msg .right .msg .voice {
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
  max-width: 200px;
  min-width: 50px;
}
.chat .main .chat-msg .right .msg .voice image {
  width: 14px;
  height: 18px;
  border: none;
  margin-left: 10px;
}
.chat .main .chat-msg .right .isbg {
  background: transparent;
}
.chat .main .zw {
  height: calc(25px);
  width: 100%;
}

