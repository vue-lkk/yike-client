.search {
  box-sizing: border-box;
  padding-top: calc(44px + 25px);
}
.search .top-bar-center {
  margin-left: 0;
}
.search .search_input {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 240px;
  background: #f3f4f6;
  border-radius: 5px;
  padding: 0 5px 0px 8px;
}
.search .search_input input {
  width: 200px;
}
.search .search_input .icon {
  width: 30px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search .search_input .icon image {
  width: 21px;
  height: 21px;
}
.search .cancel {
  font-size: 14px;
  padding-top: 25px;
}
.search .main .result {
  box-sizing: border-box;
}
.search .main .result .title {
  width: 43px;
  height: 30px;
  font-family: PingFangSC-Semibold;
  font-size: 22px;
  color: #272832;
  letter-spacing: -0.75px;
  font-weight: 600;
  padding-top: 20px;
  padding-left: 16px;
}
.search .main .result .list {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 16px;
}
.search .main .result .list .left {
  display: flex;
  align-items: center;
}
.search .main .result .list .left .navigator-hover {
  background-color: transparent;
}
.search .main .result .list .left .left-avatar {
  width: 40px;
  height: 40px;
  border-radius: 10px;
  pointer-events: none;
}
.search .main .result .list .left .left-names {
  margin-left: 16px;
}
.search .main .result .list .left .left-names .name {
  font-size: 18px;
  color: #272832;
}
.search .main .result .list .left .left-names .email {
  font-size: 12px;
  color: rgba(39, 40, 50, 0.4);
}
.search .main .result .list .right {
  width: 60px;
  height: 24px;
  line-height: 24px;
  text-align: center;
  font-size: 12px;
  border-radius: 12px;
}
.search .main .result .list .send {
  background: #ffe431;
}
.search .main .result .list .add {
  color: #5799ff;
  background: rgba(74, 170, 255, 0.1);
}

