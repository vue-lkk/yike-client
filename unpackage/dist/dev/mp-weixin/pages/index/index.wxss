.content {
  padding-top: calc(44px + 25px);
}
.content .main {
  box-sizing: border-box;
}
.content .main .friends .friend-list {
  display: flex;
  align-items: center;
  padding: 10px 18px;
}
.content .main .friends .friend-list:active {
  background-color: #f3f4f6;
}
.content .main .friends .friend-list .friend-list-l {
  position: relative;
}
.content .main .friends .friend-list .friend-list-l .tip {
  position: absolute;
  z-index: 1;
  top: -5px;
  right: -10px;
  text-align: center;
  box-sizing: border-box;
  padding: 0 2px;
  min-width: 18px;
  height: 18px;
  line-height: 18px;
  background: #FF5D5B;
  border-radius: 12px;
  color: #ffffff;
  font-size: 12px;
}
.content .main .friends .friend-list .friend-list-l image {
  width: 48px;
  height: 48px;
  border-radius: 12px;
}
.content .main .friends .friend-list .friend-list-r {
  flex: 1;
  margin-left: 16px;
}
.content .main .friends .friend-list .friend-list-r .top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content .main .friends .friend-list .friend-list-r .top .name {
  font-size: 18px;
}
.content .main .friends .friend-list .friend-list-r .top .time {
  font-size: 12px;
  color: rgba(39, 40, 50, 0.4);
}
.content .main .friends .friend-list .friend-list-r .bottom {
  font-size: 14px;
  color: rgba(39, 40, 50, 0.6);
  /* 设置最大宽度 */
  max-width: 200px;
  /* 禁止文本换行 */
  white-space: nowrap;
  /* 隐藏溢出部分 */
  overflow: hidden;
  /* 使用省略号表示溢出部分 */
  text-overflow: ellipsis;
}

