.top-bar {
  z-index: 2;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: calc(44px + 25px);
  padding-top: 25px;
  background: #ffffff;
  padding-left: 20px;
  padding-right: 20px;
}
.top-bar .top-bar-left image {
  width: 34px;
  height: 34px;
  border-radius: 5px;
}
.top-bar .top-bar-center {
  margin-left: 20px;
}
.top-bar .top-bar-center image {
  width: 44px;
  height: 21px;
}
.top-bar .top-bar-right {
  display: flex;
}
.top-bar .top-bar-right .search {
  margin-right: 20px;
}
.top-bar .top-bar-right .search image {
  width: 26px;
  height: 26px;
}
.top-bar .top-bar-right .add image {
  width: 24px;
  max-height: 24px;
}
.borderBottom {
  border-bottom: 1px solid rgba(39, 40, 50, 0.1);
}

