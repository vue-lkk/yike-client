.submit {
  position: fixed;
  width: 100%;
  bottom: 0;
  background: #f7f7f7;
  box-shadow: inset 0px 0.5px 0px 0px rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  padding: 8px;
  z-index: 1000;
}
.submit .sumbit-chat {
  display: flex;
  align-items: flex-end;
}
.submit .sumbit-chat .bt-img image {
  width: 28px;
  height: 28px;
  margin: 0 5px;
}
.submit .sumbit-chat .chat-send {
  flex: 1;
  background: #FFFFFF;
  border-radius: 10px;
  padding: 8px;
  max-height: 80px;
  overflow: hidden;
}
.submit .sumbit-chat .record {
  display: flex;
  flex: 1;
  background: #FFFFFF;
  border-radius: 10px;
  padding: 8px;
  max-height: 80px;
  overflow: hidden;
  justify-content: center;
}
.submit .emoji {
  height: 218px;
  background: #f1f1f1;
  padding-bottom: 50px;
  margin-top: 10px;
  border-radius: 8px;
  bottom: env(safe-area-inset-bottom);
}
.submit .emoji .send-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 88px;
  height: 30px;
  padding: 6px 10px 20px;
  position: absolute;
  right: 8px;
  bottom: 8px;
  background-color: #f1f1f1;
}
.submit .emoji .send-box .del, .submit .emoji .send-box .send {
  width: 40px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  background-color: #ffe431;
  font-size: 14px;
  border-radius: 5px;
}
.submit .emoji .send-box .del {
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.submit .emoji .send-box .del image {
  height: 19px;
  width: 23px;
}
.submit .more {
  height: 218px;
  background: #f1f1f1;
  padding-bottom: 50px;
  margin-top: 10px;
  border-radius: 8px;
  bottom: env(safe-area-inset-bottom);
}
.submit .more .more-list {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}
.submit .more .more-list .more-itme {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 15%;
  height: 25%;
  margin: 10px 5%;
}
.submit .more .more-list .more-itme image {
  width: 25px;
  height: 25px;
  background: #FFFFFF;
  border-radius: 10px;
  padding: 10px;
}
.submit .more .more-list .more-itme .name {
  font-size: 12px;
  margin-top: 5px;
}
.submit .voice-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 53px;
  background: rgba(0, 0, 0, 0.5);
}
.submit .voice-mask .voice {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  margin: auto;
  width: 230px;
  height: 35px;
  background: #fff;
  border-radius: 34px;
  display: flex;
  justify-content: center;
}
.submit .voice-mask .voice .progress {
  min-width: 50px;
  max-width: 230px;
  height: 35px;
  background: #ffe431;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 35px;
}
.submit .voice-mask .cancal {
  position: absolute;
  bottom: 10px;
  left: 50%;
  -webkit-transform: translate(-50%);
          transform: translate(-50%);
  color: #FFFFFF;
  font-size: 14px;
}

